generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @map("_id") @db.ObjectId @default(auto())  // Automatically generates ObjectId for MongoDB
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())               // Automatically sets the current time
}


model Group {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  userId    String     @db.ObjectId
  
}

model Exercise {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  groupId String     @db.ObjectId
  name String
  gifUrl String
  target String
  equipment String
  bodyPart String
  instructions String[]
  secondaryMuscles String[]
  reps String
  sets String
  kg String
}
