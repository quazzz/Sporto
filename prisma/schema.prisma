generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  groups    Group[]  @relation("UserGroups")
}

model Group {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  name      String?
  userId    String     @db.ObjectId
  user      User       @relation("UserGroups", fields: [userId], references: [id])
  exercises Exercise[]  @relation("GroupExercises")
}

model Exercise {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  groupId String     @db.ObjectId
  group   Group     @relation("GroupExercises", fields: [groupId], references: [id])
  name String
  gifUrl String
  target String
  equipment String
  bodyPart String
  instructions String[]
  secondaryMuscles String[]
}
